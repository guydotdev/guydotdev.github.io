---
import RoundImage from './round-image.astro'

const { imageUrl, imageAltText, title, url } = Astro.props
---

<section class="flex flex-row items-start px-96 my-12">
  <RoundImage imageUrl={imageUrl} altText={imageAltText} link={url} />
  <div class="px-8 pt-6 align-middle">
    <a href={url}>
      <h1
        class="font-serif text-xl pb-2 hover:text-programer-peach transition-colors duration-300 ease-in-out"
      >
        {title}
      </h1>
    </a>
    <slot />
  </div>
</section>

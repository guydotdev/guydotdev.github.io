---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <title>{title}</title>
  </head>

  <body class="flex flex-col items-center container mx-auto">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
